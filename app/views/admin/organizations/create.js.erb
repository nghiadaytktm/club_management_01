<% if @organization.errors.any? %>
  $('#modal-organization').html('<%= j render "form_organization" %>')
<% else %>
  <% if flash[:success].present? %>
    $('#list-org-body-table').prepend('<%= j render partial: "organization", locals: {organization: @organization} %>');
  <% end %>
  $('#modal-organization').modal('hide');
  $('#main-container').append('<%= j render partial: "shared/flash_warning" %>');
  $('.notify').slideUp(3000);
<% end %>
